<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dashboard" parent="AppTheme">
        <item name="actionBarStyle">@style/AppTheme.NoElevation</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoElevation" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="ScrollPanel">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbarAlwaysDrawHorizontalTrack">false</item>
        <item name="android:scrollbarDefaultDelayBeforeFade">
            @android:integer/config_mediumAnimTime
        </item>
        <item name="android:scrollbarFadeDuration">@android:integer/config_mediumAnimTime</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="FullBleedBannerImage">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="MainHeadTitle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/large_gap</item>
        <item name="android:layout_marginTop">@dimen/large_gap</item>
    </style>

    <style name="AppCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/large_gap</item>
    </style>

    <style name="AppCardContentText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/default_gap</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>